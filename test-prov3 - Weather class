#--Testprov 3--#

#Skapa ett program som ber användaren att mata in orter och väderlekar.
#Alla orter sparas i en lista
#Användaren kan sedan välja att visa alla registrerade orter och dess väderlekar


orter = []          #Sparar alla objekt (orter)

class Weather:

    def __init__(self, namn, temp, mm, ms):
        self.namn = namn
        self.temp = temp
        self.mm = mm
        self.ms = ms

    def display(self):
        print(self.namn,end="\t\t")
        print(self.temp,end="\t\t")
        print(self.mm,end="\t\t")
        print(self.ms)


def ny_ort():
    namn = input("Ange ortens namn: ")
    temp = input("Ange temperatur: ")
    mm = input("Ange nederbörd (mm): ")
    ms = input("Ange vind (m/s): ")
    print("Uppgifterna registrerade")

    namn = namn.title()
    
    orter.append(Weather(namn, temp, mm, ms))

def meny():

    rubrik = "VÄDERLEK"
    print("\n",rubrik)
    print("="*len(rubrik))
    print("1 Registrera ort + väderlek")
    print("2 Visa alla registrerade resultat")
    print("3 Avsluta")
    

while True:

    meny()
    val = input("Välj: ")
    print("")
    if val == "1":
        if len(orter) <= 30:
            ny_ort()
        else:
            print("Du har redan angett 30 orter")

    elif val == "2":
        if len(orter) > 0:

            for i in range(len(orter)):
                for j in range(i+1,len(orter)):
                    if (orter[i].namn > orter[j].namn):
                        tmp = orter[i]
                        orter[i] = orter[j]
                        orter[j] = tmp
            print("")
            print("Ort\t\tTemperatur\t\tmm\t\tms")
            for i in range(len(orter)):
                orter[i].display()
                print("")
                
        else:
            print("Du har ännu inte angett någon ort")
    elif val == "3":
        break

    else:
        print("Fel val")
